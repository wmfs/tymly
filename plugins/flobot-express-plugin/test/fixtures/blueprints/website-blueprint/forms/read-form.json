{
  "version": "1.0",
  "label": "Read form",
  "form": [
    "name",
    "email",
    {
      "key": "comment",
      "type": "textarea",
      "placeholder": "Make a comment"
    },

    {
      "type": "actions",
      "items": [
        {
          "type": "button",
          "style": "btn-default",
          "title": "Cancel",
          "onClick": "vm.cancelFlobot()"
        },
        {
          "type": "submit",
          "style": "btn-info",
          "title": "OK"
        }
      ]
    }

  ],
  "schema": {
    "type": "object",
    "title": "Comment",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "pattern": "^\\S+@\\S+$",
        "description": "Email will be used for evil."
      },
      "comment": {
        "title": "Comment",
        "type": "string",
        "maxLength": 20,
        "validationMessage": "Don't be greedy!"
      }
    },
    "required": [
      "name",
      "email",
      "comment"
    ]
  }
}
